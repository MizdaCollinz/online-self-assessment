{
    "manifest_version": 2,
    "name": "Online time self assessment",
    "version": "0.1",

    // "default_locale": "en",
    "description": "An extension that helps a user monitor and present their time spent online",

    "background" :{
        //Event Page
        "scripts" :["./scripts/track.js"],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["./scripts/tagDisc.js"],
            "run_at": "document_end"
        }
    ],

    //Browser Action - Create a menu?
     "browser_action" : {
         "default_title": "Online Assessment",
         "default_popup": "./pages/popupMenu.html"
     },

    "permissions": [
        "history",
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*"
    ],

    "web_accessible_resources": ["pages/featureDisc.html"]
}